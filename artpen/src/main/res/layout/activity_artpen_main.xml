<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.doodles.MainActivity">

    <LinearLayout
        android:id="@+id/option"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#701111"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/new_btn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:background="@drawable/newbtn"/>

        <ImageView
            android:id="@+id/save_btn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:background="@drawable/save"/>

        <ImageView
            android:id="@+id/paint_btn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/paint"/>

        <ImageView
            android:id="@+id/color_btn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:background="@drawable/color"/>

        <ImageView
            android:id="@+id/undo_btn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:background="@drawable/undo"/>

        <ImageView
            android:id="@+id/redo_btn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:background="@drawable/redo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/canvas_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/option"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ffffffff"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>
